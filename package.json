{
  "name": "wfm2",
  "version": "0.0.1",
  "description": "A WFM2 PoC using the mediator pattern",
  "repository": "https://github.com/feedhenry-staff/wfm2-poc.git",
  "engines": {
    "node": ">=0.10.0",
    "npm": ">=2.0.0"
  },
  "main": "server/server.js",
  "scripts": {
    "start": "npm run serve-portal & npm run serve-mobile",
    "watch": "npm run watch-mobile-js & npm run watch-portal-js & npm run watch-server & npm run serve-mobile & npm run livereload & npm run sass-mobile-watch & npm run sass-portal-watch",
    "serve-portal": "node server/server.js",
    "serve-mobile": "node server/mobile-dev.js",
    "build": "npm run build-mobile-js & npm run build-portal-js & npm run sass-mobile & npm run sass-portal",
    "build-portal-js": "browserify portal/app/main.js > portal/app/bundle.js",
    "build-mobile-js": "browserify www/app/app.js > www/app/bundle.js",
    "watch-portal-js": "watchify portal/app/main.js -o portal/app/bundle.js -dv --ignore-watch=\"!**/*.js|**/bundle.js|www/**|**/node_modules/**\"",
    "watch-mobile-js": "watchify www/app/app.js -o www/app/bundle.js -dv --ignore-watch=\"!**/*.js|**/bundle.js|portal/**|**/node_modules/**\"",
    "watch-server": "nodemon -w server server/server.js",
    "sass-mobile": "node-sass www/sass/app.scss www/css/app.css",
    "sass-mobile-watch": "nodemon -e scss -w www/sass -x 'npm run sass-mobile'",
    "sass-portal": "node-sass portal/sass/portal.scss portal/css/portal.css",
    "sass-portal-watch": "nodemon -e scss -w portal/sass -x 'npm run sass-portal'",
    "livereload": "node scripts/livereload",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "wfm"
  ],
  "author": "Brian Leathem",
  "license": "ISC",
  "dependencies": {
    "angular": "^1.4.3",
    "angular-animate": "^1.4.3",
    "angular-sanitize": "^1.4.6",
    "angular-timeago": "^0.2.0",
    "angular-ui-router": "^0.2.15",
    "async": "^1.4.2",
    "body-parser": "^1.13.3",
    "config-chain": "^1.1.9",
    "express": "^4.13.2",
    "fh-wfm-mediator": "~0.0.4",
    "fh-wfm-risk-assessment": "~0.0.1",
    "fh-wfm-vehicle-inspection": "~0.0.1",
    "fh-wfm-workflow": "~0.0.8",
    "fh-wfm-workorder": "~0.0.8",
    "grunt-browserify": "^4.0.1",
    "ionic-bower": "git+https://github.com/bleathem/ionic-bower.git#1.0.1",
    "lodash": "^3.10.1",
    "patternfly": "^1.3.0",
    "q": "^1.4.1"
  },
  "devDependencies": {
    "grunt-contrib-clean": "~0.5.0",
    "grunt-newer": "~0.5.4",
    "grunt-rev": "~0.1.0",
    "load-grunt-tasks": "~0.2.0",
    "time-grunt": "~0.2.1",
    "grunt-contrib-connect": "^0.7.1",
    "grunt-contrib-watch": "^0.6.1",
    "grunt": "^0.4.4"
  },
  "cordovaPlugins": [
    "cordova-plugin-device",
    "cordova-plugin-console",
    "cordova-plugin-whitelist",
    "cordova-plugin-splashscreen",
    "com.ionic.keyboard"
  ],
  "cordovaPlatforms": []
}
